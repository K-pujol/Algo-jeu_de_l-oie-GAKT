int D1 = 0;
int D2 = 0;
int position = 0;
int[] plateau = new int [64];
int taillecase= 30;
int plateau_y=taillecase/2;

void draw() {  
  for (int i = 0; i < 64; i++) {

    fill (143,139,163);
    
    if (position == i) {
      fill (255,0,0);
    }
    rect (plateau[i], plateau_y, taillecase, taillecase);
    textAlign(CENTER,CENTER);
    fill(0);
    text(i,plateau[i],plateau_y);
  }
}

void setup() {
  size (2000, 500);
  rectMode(CENTER);
init_plateau();
println(plateau);
  while (position != 63) {

    D1 = LancerDes();
    D2 = LancerDes();
    println("position: " + position + " " + D1 + "+" +  D2);

    position = position + D1 + D2;


    if (position > 63) {
      int ecart = position - 63;
      position = position - ecart * 2;
    }
  }

  println("Position: " + position + " C'est gagnÃ© !");
}

void init_plateau(){
  for (int i=0;plateau.length>i;i++){
    plateau[i]=i*taillecase+taillecase/2;
  }  
}


int LancerDes() {

  return int(random(6)+1);
}
